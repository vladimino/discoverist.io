{
    "name": "vladimino/discoverist.io",
    "description": "Composer virtual package listing.",
    "keywords": ["package","composer","packagist"],
    "license": "MIT",
    "authors": [
        {
            "name": "Volodymyr Bilokur",
            "email": "vladimino@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.6.0",
        "twbs/bootstrap": "~3.3"
    },
    "require-dev": {
        "phpunit/phpunit": "4.8.*"
    },
    "autoload": {
        "psr-4": {
            "Vladimino\\Discoverist\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vladimino\\Discoverist\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "scripts": {
        "test": "phpunit",
        "publish:assets": [
            "mkdir -p www/bootstrap",
            "cp -R vendor/twbs/bootstrap/dist/ www/bootstrap/"
        ]
    }
}
