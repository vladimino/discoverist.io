{
    "name": "vladimino/discoverist.io",
    "description": "Скрипты для ЧГК",
    "license": "MIT",
    "authors": [
        {
            "name": "Volodymyr Bilokur",
            "email": "vladimino@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.1",
        "twbs/bootstrap": "~3.3",
        "paquettg/php-html-parser": "^1.7",
        "symfony/routing": "^4.0",
        "symfony/config": "^4.0",
        "symfony/http-foundation": "^4.0",
        "twig/twig": "^1.28",
        "sunra/php-simple-html-dom-parser": "^1.5",
        "tightenco/collect": "^5.4",
        "pimple/pimple": "^3.2",
        "symfony/yaml": "^4.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5"
    },
    "autoload": {
        "psr-4": {
            "Vladimino\\Discoverist\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vladimino\\Discoverist\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "scripts": {
        "test": "phpunit",
        "publish:assets": [
            "mkdir -p www/bootstrap",
            "cp -R vendor/twbs/bootstrap/dist/* www/bootstrap/"
        ]
    }
}
